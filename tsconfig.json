{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,        // Enable import a from 'a';
        "emitDecoratorMetadata": true,  // For typeorm
        "experimentalDecorators": true, // For typeorm
        "lib": [                        // For AWS
            "es5",
            "ES2015.Promise"
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["./dist", "node_modules"]
}